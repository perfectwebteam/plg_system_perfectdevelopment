	<version>1.0</version>
	<description>PLG_PERFECTDEVELOPMENT_XML_DESCRIPTION</description>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_perfectdevelopment.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_perfectdevelopment.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<filename plugin="perfectimage">perfectimage.php</filename>
		<folder>language</folder>
	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="text"
					label="PLG_PERFECTIMAGE_DOMAIN_LABEL"
					description="PLG_PERFECTIMAGE_DOMAIN_DESCRIPTION"
				/>
			</fieldset>
		</fields>
